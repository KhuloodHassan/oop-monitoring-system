<!DOCTYPE html>
<html lang="en">
<head>

    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">

    <title>SB Admin 2 - Dashboard</title>

    <!-- Custom fonts for this template-->
    <link href="/vendor/fontawesome-free/css/all.min.css" rel="stylesheet" type="text/css">
    <link
        href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i"
        rel="stylesheet">

    <!-- Custom styles for this template-->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">
    <link href="/css/sb-admin-2.min.css" rel="stylesheet">
    <link href="/css/style.css" rel="stylesheet">

</head>

<body id="page-top">


    <%- include('partials/navSection.ejs') %>
   
                <!-- End of Topbar -->
                <div class="container">

                    <div class="card o-hidden border-0 shadow-lg my-5">
                        <div class="card-body p-0">
                            <!-- Nested Row within Card Body -->
                            <div class="row">
                                <div class="col-lg-5 d-none d-lg-block bg-register-image"></div>
                                <div class="col-lg-7">
                                    <div class="p-5">
                                        <div class="text-center">
                                            <h1 class="h4 text-gray-900 mb-4">Update Site</h1>
                                        </div>
                                        <form action="/buildingUpdated/<%= building._id %>?_method=PUT" method="POST" class="user">
                                            <div class="form-group">
                                                <span class="ml-3">Building name</span>
                                                <input type="text" class="form-control form-control-user"
                                                    placeholder="Building Name" name="name" required="true" value="<%= building.name %>">
                                            </div>
                                            <div class="form-group">
                                                <span class="ml-3">Location</span>
                                                <input type="text" class="form-control form-control-user"
                                                    placeholder="Location" name="location" required="true" value="<%= building.location %>">
                                            </div>
                                            <div class="form-group">
                                                <span class="ml-3">Address</span>
                                                <input type="text" class="form-control form-control-user"  placeholder="Address" name="address" required="true" value="<%= building.address %>">
                                            </div>
                                           
                                            <div class="form-group">
                                                <span class="ml-3">Number of staff</span>
                                                <input type="number" class="form-control form-control-user" placeholder="Staff" name="staff" required="true" max="10" value="<%= building.staff %>">
                                            </div>
                                            <button type="submit" id="update-btn" class="btn btn-facebook btn-user btn-block">
                                                <i class="fa fa-login"></i> Submit
                                            </button>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- Begin Page Content -->
                <div class="container-fluid">
                    

                </div>
                <!-- /.container-fluid -->

            </div>
            <!-- End of Main Content -->

    <%- include('partials/footer.ejs') %>