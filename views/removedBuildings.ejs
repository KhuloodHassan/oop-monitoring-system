<%- include('partials/header.ejs') %>

<body id="page-top">

  <%- include('partials/navSection.ejs') %>

               <!-- Begin Page Content -->
               <div class="container-fluid">

                <!-- Page Heading -->
                <h1 class="h3 mb-2 mb-4 ml-3 text-gray-800">Removed Sites</h1>
                <!-- <h2 class="mb-4">Building Site Overview</h2> -->
                
                <!-- DataTales Example -->
                <div class="card shadow mb-4">
                  <div class="card-body">
                      <div class="table-responsive">
                        <div class="row align-items-center justify-content-between pb-1">
                          <form class="d-none d-sm-inline-block form-inline mr-auto my-2 my-md-0 mw-100 pl-2 navbar-search">
                            <div class="input-group pb-3">
                              <input type="text" class="form-control bg-light border-0 small shadow-none" placeholder="Search...">
                                <div class="input-group-append">
                                  <button class="btn btn-primary" type="button">
                                  <i class="fas fa-search fa-sm"></i>
                                  </button>
                                </div>
                              </div>
                          </form>
                        </div>

                          <!-- Nav Item - Search Dropdown (Visible Only XS) -->
                          <li class="nav-item dropdown no-arrow d-sm-none show">
                            <a class="nav-link dropdown-toggle text-gray-500 pl-3 pb-3" href="#" id="searchDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">
                              <i class="fas fa-search fa-fw"></i>
                            </a>
                            <!-- Dropdown - Messages -->
                            <div class="dropdown-menu dropdown-menu-right p-3 shadow" aria-labelledby="searchDropdown">
                                <form class="form-inline mr-auto w-100 navbar-search">
                                    <div class="input-group">
                                        <input type="text" class="form-control bg-light border-0 small" placeholder="Search for..." aria-label="Search" aria-describedby="basic-addon2">
                                        <div class="input-group-append">
                                            <button class="btn btn-primary" type="button">
                                                <i class="fas fa-search fa-sm"></i>
                                            </button>
                                        </div>
                                    </div>
                                </form>
                            </div>
                        </li>
                  
                          <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                              <thead>
                                <tr>
                                  <th>Building</th>
                                  <th>Address</th>
                                  <th>Rooms</th>
                                  <th>Staff</th>
                                  <th></th>
                                </tr>
                              </thead>
                              <tbody>
                           

                                    <% buildings.forEach(building => { %>
                                        <% if( building.listed == false) { %>
                            
                                          <tr>
                                              <td class="cursor-pointer"onClick="window.location='/building/<%= building._id %>'"> <%= building.name %></td>
                                              <td class="cursor-pointer"onClick="window.location='/building/<%= building._id %>'"> <%= building.location %></td>
                                              <td class="cursor-pointer"onClick="window.location='/building/<%= building._id %>'"> <%= building.rooms.length %></td>
                                              <td class="cursor-pointer"onClick="window.location='/building/<%= building._id %>'"> <%= building.staff %></td>
                                              <td class="cursor-pointer bg-danger text-center">
                                                 <!-- Button trigger modal -->
                                                <a href="#" class="fa fa-ban text-white clickable" data-toggle="modal" data-target="#exampleModal<%=building._id%>"></a>
                                              </td>
                                          </tr>  
                                         
                                       
                                        
                                  </tbody>
                          </table>
                      </div>
                      <a href="/">Dashboard</a>
                  </div>
              </div>
              
          </div>
          <!-- /.container-fluid -->

        </div>
        <!-- End of Main Content -->
        <div class="modal fade" id="exampleModal<%=building._id%>" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
          aria-hidden="true">
          <div class="modal-dialog" role="document">
              <div class="modal-content">
                  <div class="modal-header">
                      <h5 class="modal-title" id="exampleModalLabel">Delete Site</h5>
                      <button class="close" type="button" data-dismiss="modal" aria-label="Close">
                          <span aria-hidden="true">Ã—</span>
                      </button>
                  </div>
                  <div class="modal-body">Are you sure you want to permanent delete <%= building.name %>?</div>
                  <div class="modal-footer">
                      <button class="btn btn-secondary" type="button" data-dismiss="modal">Cancel</button>
                      <form id="removePrompt" onClick="clicked()" action="/building/<%= building._id %>?_method=DELETE" method="POST">
                        <button type="submit" class="btn btn-primary">Confirm</button>
                       </form>
                  </div>
              </div>
          </div>
      </div>  
          <%}%>
    <% }) %>    
<%- include('partials/footer.ejs') %>

