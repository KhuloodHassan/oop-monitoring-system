<%- include('partials/header.ejs') %>

<body id="page-top">

  <%- include('partials/navSection.ejs') %>

               <!-- Begin Page Content -->
               <div class="container-fluid">

                <!-- Page Heading -->
                <h1 class="h3 mb-2 mb-4 text-gray-800">Removed Sites</h1>
                <!-- <h2 class="mb-4">Building Site Overview</h2> -->

                <!-- DataTales Example -->
                <div class="card shadow mb-4">
                  <div class="card-body">
                      <div class="table-responsive">
                        <div class="row align-items-center justify-content-between pb-3">
                          <form class="d-none d-sm-inline-block form-inline mr-auto my-2 my-md-0 mw-100 pl-2 navbar-search">
                            <div class="input-group">
                              <input type="text" class="form-control bg-light border-0 small shadow-none" placeholder="Search...">
                                <div class="input-group-append">
                                  <button class="btn btn-primary" type="button">
                                  <i class="fas fa-search fa-sm"></i>
                                  </button>
                                </div>
                              </div>
                          </form>
                        </div>
                          <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                              <thead>
                                <tr>
                                  <th class="text-center">#</th>
                                  <th>Building</th>
                                  <th>Address</th>
                                  <th>Rooms</th>
                                  <th>Staff</th>
                                  <th></th>
                                </tr>
                              </thead>
                              <tbody>
                                <% let sum = 0 %>
                                    <% buildings.forEach(building => { %>
                                        <% if( building.listed == false) { %>
                                        <tr>
                                          <td class="text-center"><%= sum += 1 %></td>
                                          <td><%= building.name %></td>
                                          <td ><%= building.address %></td>
                                          <td><%= building.rooms.length %></td>
                                          <td><%= building.staff %></td>
                                          <td class="cursor-pointer bg-danger text-center">
                                            <form id="removePrompt" onClick="clicked()" action="/building/<%= building._id %>?_method=DELETE" method="POST">
                                            <button type="submit" class="fa fa-ban text-white bg-none">
                                            </button>
                                        </form></td>                                                   
                                        </tr>

                                           
                                        <tr class="cursor-pointer"onClick="window.location ='/building/<%= building._id %>'">
                                          <td class="text-center"><%= sum += 1 %></td>
                                          <td><%= building.name %></td>
                                          <td><%= building.address %></td>
                                          <td><%= building.rooms.length %></td>
                                          <td><%= building.staff %></td>
                                          <td class="cursor-pointer bg-danger text-center">
                                            <form id="removePrompt" onClick="clicked()" action="/building/<%= building._id %>?_method=DELETE" method="POST">
                                              <button type="submit" class="fa fa-ban text-white bg-none"></button>
                                             </form>
                                          </td>
                                      </tr>
                                  
                                        <% } %>
                                    <% }) %>
                                        
                                  </tbody>
                          </table>
                      </div>
                      <a href="/">Dashboard</a>
                  </div>
              </div>
             
          </div>
          <!-- /.container-fluid -->

        </div>
        <!-- End of Main Content -->
        <script>
    
          </script>
<%- include('partials/footer.ejs') %>